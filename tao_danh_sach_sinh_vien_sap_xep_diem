        // Hàm điền dữ liệu vào bảng
        function populateTable() {
            const tableBody = document.getElementById('tableBody');
            
            studentData.forEach(student => {
                const row = document.createElement('tr');
                
                row.innerHTML = `
                    <td>${student.id}</td>
                    <td>${student.name}</td>
                    <td>${student.d14}</td>
                    <td>${student.d21}</td>
                    <td>${student.d28}</td>
