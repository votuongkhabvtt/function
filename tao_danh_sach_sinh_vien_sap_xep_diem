                        <th>Họ và tên</th>
                        <th>Điểm danh 14/8</th>
                        <th>Điểm danh 21/8</th>
                        <th>Điểm danh 28/8</th>
                        <th>Chuyên cần</th>
                        <th>Chuyên cần (chữ)</th>
                        <th>Giữa kỳ</th>
                        <th>Giữa kỳ (chữ)</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Dữ liệu sẽ được thêm bằng PHP/MySQL -->
                    <?php
                    // Kết nối database
                    $conn = new mysqli("localhost", "username", "password", "university_db");
                    
                    // Kiểm tra kết nối
                    if ($conn->connect_error) {
                        die("Kết nối thất bại: " . $conn->connect_error);
                    }
                    
                    // Truy vấn danh sách đầy đủ
                    $sql = "SELECT * FROM students ORDER BY id";
                    $result = $conn->query($sql);
                    
                    if ($result->num_rows > 0) {
                        while($row = $result->fetch_assoc()) {
                            echo "<tr>
                                <td>".$row["id"]."</td>
                                <td>".$row["full_name"]."</td>
                                <td>".$row["attendance_14_8"]."</td>
                                <td>".$row["attendance_21_8"]."</td>
                                <td>".$row["attendance_28_8"]."</td>
                                <td>".$row["attendance_score"]."</td>
                                <td>".$row["attendance_word"]."</td>
                                <td>".$row["midterm_score"]."</td>
                                <td>".$row["midterm_word"]."</td>
                            </tr>";
                        }
                    } else {
                        echo "<tr><td colspan='9'>Không có dữ liệu</td></tr>";
                    }
                    ?>
                </tbody>
            </table>
        </div>
        
        <div class="section">
            <h2>2. Điểm trung bình sinh viên (xếp hạng giảm dần)</h2>
            <table id="averageScore">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Họ và tên</th>
                        <th>Điểm chuyên cần</th>
                        <th>Điểm giữa kỳ</th>
                        <th>Điểm trung bình</th>
                        <th>Xếp hạng</th>
                    </tr>
                </thead>
                <tbody>
                    <?php
                    // Truy vấn tính điểm trung bình và xếp hạng
                    $sql = "SELECT 
                                id, 
                                full_name, 
                                attendance_score, 
                                midterm_score,
                                (attendance_score + midterm_score)/2 AS average_score
                            FROM 
                                students
                            ORDER BY 
                                average_score DESC";
                    
                    $result = $conn->query($sql);
                    
                    if ($result->num_rows > 0) {
                        $rank = 1;
                        while($row = $result->fetch_assoc()) {
                            echo "<tr>
                                <td>".$row["id"]."</td>
                                <td>".$row["full_name"]."</td>
                                <td>".$row["attendance_score"]."</td>
                                <td>".$row["midterm_score"]."</td>
                                <td>".number_format($row["average_score"], 2)."</td>
                                <td>".$rank."</td>
                            </tr>";
                            $rank++;
                        }
                    } else {
                        echo "<tr><td colspan='6'>Không có dữ liệu</td></tr>";
                    }
                    
                    // Đóng kết nối
                    $conn->close();
                    ?>
                </tbody>
            </table>
        </div>
        
